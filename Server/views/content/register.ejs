<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-10">
                <div class="card shadow-2-strong" style="border-radius: 1rem; background-color: rgba(0, 0, 0, 0.151);">
                    <div class="card-body p-5 text-center">
                    <div class="row">

        <div class="login" id="contentArea">
            <h1 class="display-4"><i class="fas fa-user"></i> Register</h1>

            <% if(messages.length > 0) { %>
                <div id="messageArea" class="alert alert-danger">
                  <%= messages %>
                </div>
              <% } %>
              
            <form id="registerForm" method="POST" novalidate>

                <div class="form-group mt-4">
                    <div class="row">
                        <p class="lead"><i class="fas fa-user-shield"></i> System Identification</p>

                <div class="form-group">
                <div class="row">
                    <div class="col-md-6">
                    <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First Name" required>
                    </div>
                    <div class="col-md-6">
                    <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last Name" required>
                    </div>
                </div>
                </div>

                        <div class="col-12">
                        <input type="text" class="form-control" id="username" name="username"  required
                        value="" placeholder="Username">   
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                        <input type="password" class="form-control" id="password" name="password"  required
                        value="" placeholder="Password">   
                    </div>
                </div>

                </div>

                <div class="form-group mb-2">
                    <div class="row">
                        <div class="col-md-12">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                        value="" placeholder="Confirm Password">
                        </div>
                    </div>
                </div>

                <div class="text-right">
                <button id="submitButton" type="submit" class="btn btn-primary btn-lg"><i class="fas fa-user-plus"></i> Register</button>
                <a href="/" id="cancelButton" class="btn btn-warning btn-lg"><i class="fas fa-undo-alt"></i> Cancel</a>
                </div>
            </form>
                <hr class="my-4">
                    <p class="text-center text-muted small">
                        Already have an account? 
            <a href="/sign-in">Sign in</a>
        </div>

        </p>
    </div>
</div> 