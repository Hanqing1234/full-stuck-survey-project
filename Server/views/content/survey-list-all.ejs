<div class="container" style="margin-top: 20px;">
    <br><br><br>
    <div>
    <!-- Welcome message and Hero Button -->
        <div id="cardcorner" class="p-4 mb-3 bg-light">
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">Hi, Welcome to Tix.</h1>
                <p class="col-md-8 fs-4">Making the survey <i>easier</i> is our <strong>target</strong>. <strong>Make</strong> your own survey <i>now</i>.</p>
                <button id="addButton" class="btn btn-primary mb-1" onclick="location.href='/survey-list/add-survey'">Create Survey</button>
            </div>
        </div>
    </div>
    <br><br>

<h1 class="display-5 fw-bold" style="text-align: center;"><%= title %></h1>
<br>

    <!-- cards -->
    <div class="row">        
        <% for(let count = 0; count < list.length; count++) { %>
            <!-- Repeatable Cards Template -->
            <div class="col-sm-6">
                <div class="card text-white border-light mb-3 bg-light" style="max-width: 40rem;" id="cardcorner">
                    <div class="card-body">
                        <h5 class="card-title"><%= list[count].title %></h5>
                        <p class="text-black-50"><%= list[count].author %></p>
                        
                       <% if(list[count].start_Date > dateNow || list[count].end_Date < dateNow) { %>
                            <span class="badge rounded-pill bg-warning text-dark"><i class="far fa-clock fa-sm"></i> From: <%= list[count].start_Date %>  To <%= list[count].end_Date %></span> 
                            <a href="/take-survey/<%= list[count]._id %>" class="btn btn-primary btn-sm btn edit disabled"><i class="fas fa-edit fa-sm"></i> Survey expired or not started</a>
                       <% } else {%> 
                            <span class="badge rounded-pill bg-success"><i class="far fa-clock fa-sm"></i> From: <%= list[count].start_Date %>  To <%= list[count].end_Date %></span>  
                            <a href="/take-survey/<%= list[count]._id %>"  class="btn btn-primary btn-sm btn edit"><i class="fas fa-edit fa-sm"></i> Take Survey</a>
                       <% } %>
                    </div>
                </div>
            </div>
        <% } %> 
    </div>
</div>    
   